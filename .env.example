# ============================================
# NutriPioneer Environment Configuration
# ============================================
# Copy this file to .env and fill in your actual values
#
# Environment: development | production
NODE_ENV=development

# ============================================
# Application URLs (Auto-Configured)
# ============================================
# URLs are automatically set based on NODE_ENV and DOMAIN variable
# No need to manually change URLs unless deploying to a custom domain

# Set your production domain (only used when NODE_ENV=production)
DOMAIN=yourdomain.com

# The following URLs are automatically configured:
# Development (NODE_ENV=development):
#   FRONTEND_URL=http://localhost:3000
#   BACKEND_URL=http://localhost:3001
#   NEXT_PUBLIC_API_URL=http://localhost:3000
#   BETTER_AUTH_URL=http://localhost:3000
#
# Production (NODE_ENV=production):
#   FRONTEND_URL=https://yourdomain.com
#   BACKEND_URL=http://backend:3001
#   NEXT_PUBLIC_API_URL=https://yourdomain.com
#   BETTER_AUTH_URL=https://yourdomain.com

# ============================================
# Better Auth Configuration
# ============================================
# Generate with: openssl rand -base64 32
BETTER_AUTH_SECRET=your_super_long_random_secret_string_here

# ============================================
# OAuth Providers
# ============================================
# Get these from Google Cloud Console
# https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# ============================================
# Database Configuration
# ============================================
# SQLite (default, file-based)
DATABASE_URL=file:./dev.db

# PostgreSQL (for production, uncomment and configure)
# DATABASE_URL=postgresql://user:password@host:5432/nutripioneer

# ============================================
# API Keys - Food & Nutrition Data
# ============================================
# USDA FoodData Central
# https://fdadc.dataportfolio.prgc.usda.gov/
USDA_API_KEY=your_usda_api_key_here

# FatSecret API
# http://platform.fatsecret.com/api/
FATSECRET_CLIENT_ID=your_fatsecret_client_id_here
FATSECRET_CLIENT_SECRET=your_fatsecret_client_secret_here

# OpenFDA API
# https://open.fda.gov/apis/
OPENFDA_API_KEY=your_openfda_api_key_here

# The Meal Database
# https://www.themealdb.com/api.php
MEALDB_API_KEY=1

# ============================================
# AI & Language Services
# ============================================
# OpenAI API
# https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# ============================================
# Media & Images
# ============================================
# Unsplash API
# https://unsplash.com/developers
UNSPLASH_APPLICATION_ID=your_unsplash_application_id
UNSPLASH_SECRET_KEY=your_unsplash_secret_key
UNSPLASH_ACCESS_KEY=your_unsplash_access_key

# ============================================
# Payment & Subscription (Polar.sh)
# ============================================
# https://polar.sh/
POLAR_ACCESS_TOKEN=your_polar_access_token
POLAR_PRODUCT_ID=your_polar_product_id
POLAR_WEBHOOK_SECRET=your_polar_webhook_secret
POLAR_ORGANIZATION_ID=your_polar_organization_id
POLAR_ENV=production

# ============================================
# Medical & Drug Information (ICD API)
# ============================================
# https://icd.who.int/
ICD_CLIENT_ID=your_icd_client_id
ICD_CLIENT_SECRET=your_icd_client_secret

# ============================================
# Backend Configuration
# ============================================
# Backend server port
PORT=3001
